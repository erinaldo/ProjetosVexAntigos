<?xml version="1.0" encoding="utf-8"?>


<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:background="@drawable/fundo"
  
  >
 
 <TableRow >
<LinearLayout 
    android:id="@+id/linearLayout2" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"   
    >

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:contentDescription="@string/Dado"
          android:src="@drawable/logo" 
          android:layout_marginLeft="1dp"
          
          />
    
    </LinearLayout>    
    
 

 <TextView
     android:id="@+id/textView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/ifs"
     android:textAppearance="?android:attr/textAppearanceLarge"    
     android:layout_marginTop="20dp" 
     android:textColor="@android:color/black"
     
     >
 </TextView>    
 </TableRow>

     <TableRow>

         <TextView
             android:id="@+id/textView2"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:text="@string/empresa"             
             android:textSize="20dp" 
             android:layout_marginLeft="30dp"
             android:textColor="@android:color/black"
             />

         <EditText
             android:id="@+id/txtEmpresa"
             android:layout_width="250dp"
             android:inputType="number|text"
             android:singleLine="true"
             android:text="" />
     </TableRow>

<TableRow >

 <TextView
     android:id="@+id/textView5"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="@string/placa"
     android:layout_marginLeft="30dp"
     android:textSize="20dp" 
     android:textColor="@android:color/black"
     />
 
<EditText
    android:id="@+id/edPlaca"
    android:layout_width="250dp"
    android:inputType="number|text"
    android:singleLine="true"
    android:text="" >
</EditText>

</TableRow>

<TableRow>

 <TextView
     android:id="@+id/textView6"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="@string/DT"
     android:layout_marginLeft="30dp"
     android:textSize="20dp" 
     android:layout_marginRight="15dp"
     android:textColor="@android:color/black"
     />

 <EditText
     android:id="@+id/edDT"
     android:layout_width="250dp"
     android:layout_height="wrap_content"
     android:inputType="number|text"
     android:singleLine="true"
     android:text="" />
 
</TableRow>



<TableRow>    
    
     <TextView
     android:id="@+id/textViewoo"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text=""
     android:layout_marginLeft="30dp"
     ></TextView> 
     
     
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="270dp"
        android:layout_height="fill_parent"
        android:text="@string/confirm" 
        
        />
</TableRow>

<ImageView
    android:id="@+id/mImageImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:contentDescription="Rs Mobile"
    />

</TableLayout> 
