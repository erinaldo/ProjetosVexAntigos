        string strsql = " SELECT PD.NUMERO PEDIDO,  PD.SERIE,   PC.CODIGO,  PC.DESCRICAO, GP.DESCRICAO GRUPO,  PDI.QUANTIDADE from DOCUMENTO PD";                
        strsql += " INNER JOIN DOCUMENTOITEM PDI ON (PDI.IDDOCUMENTO = PD.IDDOCUMENTO)   ";
