        rw2.LocalReport.ReportPath = @"kpi\reports\kpi02Solicitadas.rdlc";
        rw2.LocalReport.EnableExternalImages = true;
        rw2.LocalReport.Refresh();
        pnlLinhasSolicitadas.Controls.Add(rw2);
